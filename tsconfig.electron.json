{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist-electron",   // Output directory for Electron's compiled files
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node"
    },
    "include": [
      "electron.ts",               // Include main Electron process file
      "preload.ts"                 // If using TypeScript for preload
    ],
    "exclude": ["node_modules"]
  }
  